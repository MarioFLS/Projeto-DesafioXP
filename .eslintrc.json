{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "max-len": ["error", { "code": 90, "ignoreUrls": true, "ignoreComments": true }],
    "no-unreachable": "error",
    "no-else-return": "error",
    "consistent-return": ["off", { "treatUndefinedAsUnspecified": true }]
  }
}